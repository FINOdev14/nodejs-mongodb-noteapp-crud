<div class="row">
    {{#each notas}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{titulo}} <a href="/notas/edit/{{_id}}"><i class="fa-solid fa-pen-to-square"></i></a>
                        
                        
                    </h4>
                    <p>{{descripcion}}</p>
                    <form action="/notas/delete/{{_id}}?_method=DELETE" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-block btn-sm">
                            DELETE
                        </button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>