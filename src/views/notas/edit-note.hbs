<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notas/edit/{{note._id}}?_method=PUT" method="post">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="titulo" id="" class="form-control" value="{{note.titulo}}">
                </div>
                <div class="form-group">
                    <textarea name="descripcion" class="form-control">{{ note.descripcion }}</textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>