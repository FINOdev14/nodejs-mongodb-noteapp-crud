<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">Registro De Cuenta</div>
    </div>
    <div class="card-body" style="background-color: #515960; border:black solid 1px;">
{{!-- Formulario --}}
      <form action="/users/signup" method="post">
        <div class="form-group">
          <input type="text" name="name"  class="form-control" placeholder="Nombre" value="{{name}}">
        </div>
        <div class="form-group">
          <input type="email" name="email"  class="form-control" placeholder="Correo" value="{{email}}">
        </div>
        <div class="form-group">
          <input type="password" name="password"  class="form-control" placeholder="Contraseña" value="{{password}}">
        </div>
        <div class="form-group">
          <input type="password" name="confirm_password"  class="form-control" placeholder="Confirme Contraseña" value="{{confirm_password}}">
        </div>
        <button class="bnt btn-primary btn-block">Registrarse</button>
      </form>

    </div>
  </div>
</div>
